{
  "name": "next-forge",
  "version": "5.2.1",
  "bin": {
    "next-forge": "dist/index.js"
  },
  "files": [
    "dist/index.js"
  ],
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "check": "bunx --bun ultracite@latest check",
    "fix": "bunx --bun ultracite@latest fix",
    "test": "turbo test",
    "analyze": "turbo analyze",
    "translate": "turbo translate",
    "boundaries": "turbo boundaries",
    "bump-deps": "bunx --bun npm-check-updates --deep -u && bun install",
    "bump-ui": "bunx --bun shadcn@latest add --all --overwrite -c packages/design-system",
    "migrate": "cd packages/database && bunx --bun prisma format && bunx --bun prisma generate && bunx --bun prisma db push",
    "clean": "git clean -xdf node_modules",
    "update-docs": "npx @next/codemod@canary agents-md --output CLAUDE.md"
  },
  "devDependencies": {
    "@auto-it/first-time-contributor": "^11.3.0",
    "@biomejs/biome": "2.3.15",
    "@repo/typescript-config": "workspace:*",
    "bun-types": "latest",
    "@turbo/gen": "^2.8.9",
    "@types/node": "^25.0.0",
    "tsup": "^8.5.0",
    "turbo": "^2.8.9",
    "typescript": "^5.9.3",
    "ultracite": "7.2.2"
  },
  "engines": {
    "node": ">=20.19.0"
  },
  "packageManager": "bun@1.1.43",
  "dependencies": {
    "@clack/prompts": "^1.0.0",
    "commander": "^14.0.2"
  },
  "type": "module",
  "overrides": {
    "@types/react": "19.2.14",
    "@types/react-dom": "19.2.3",
    "parse5": "^8.0.0"
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ]
}
